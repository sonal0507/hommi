<?xml version='1.0' encoding='utf-8'?>
<widget id="com.homii.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Homii</name>
    <description>
        A comprehensive mobile app for home construction planning and professional discovery.
    </description>
    <author email="support@homii.com" href="https://homii.com">
        Homii Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/img/icon-ldpi.png" />
        <icon density="mdpi" src="www/img/icon-mdpi.png" />
        <icon density="hdpi" src="www/img/icon-hdpi.png" />
        <icon density="xhdpi" src="www/img/icon-xhdpi.png" />
        <icon density="xxhdpi" src="www/img/icon-xxhdpi.png" />
        <icon density="xxxhdpi" src="www/img/icon-xxxhdpi.png" />
        
        <splash density="land-ldpi" src="www/img/splash-land-ldpi.png" />
        <splash density="land-mdpi" src="www/img/splash-land-mdpi.png" />
        <splash density="land-hdpi" src="www/img/splash-land-hdpi.png" />
        <splash density="land-xhdpi" src="www/img/splash-land-xhdpi.png" />
        <splash density="land-xxhdpi" src="www/img/splash-land-xxhdpi.png" />
        <splash density="land-xxxhdpi" src="www/img/splash-land-xxxhdpi.png" />
        
        <splash density="port-ldpi" src="www/img/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="www/img/splash-port-mdpi.png" />
        <splash density="port-hdpi" src="www/img/splash-port-hdpi.png" />
        <splash density="port-xhdpi" src="www/img/splash-port-xhdpi.png" />
        <splash density="port-xxhdpi" src="www/img/splash-port-xxhdpi.png" />
        <splash density="port-xxxhdpi" src="www/img/splash-port-xxxhdpi.png" />
        
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="34" />
    </platform>
    
    <!-- Plugins -->
    <plugin name="cordova-plugin-whitelist" source="npm" />
    <plugin name="cordova-plugin-camera" source="npm" />
    <plugin name="cordova-plugin-geolocation" source="npm" />
    <plugin name="phonegap-plugin-push" source="npm" />
    <plugin name="cordova-plugin-device" source="npm" />
    <plugin name="cordova-plugin-file" source="npm" />
    <plugin name="cordova-plugin-media-capture" source="npm" />
    <plugin name="cordova-plugin-dialogs" source="npm" />
    <plugin name="cordova-plugin-network-information" source="npm" />
    <plugin name="cordova-plugin-splashscreen" source="npm" />
    
    <!-- Preferences -->
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="750" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    
    <!-- Allow navigation -->
    <allow-navigation href="*" />
</widget>